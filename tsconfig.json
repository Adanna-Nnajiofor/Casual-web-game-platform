{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "src/jest.setup.ts",
    "seeders/**/*",
    "src/scripts/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
